        <field name="ACF" type="radio" default="0" label="USE_ACF" description="USE_ACF_DESCRIPTION" class="btn-group">
            <option value="0">JDisabled</option>
            <option value="1">JEnabled</option>
        </field>
    </fieldset>
    <fieldset name="custom_config">
        <field name="CKEditorCustomJs" type="textarea" rows="10" cols="60" label="CUSTOM_JS" description="CUSTOM_JS_DESCRIPTION" class="inputbox" default="CKEDITOR.config.fullPage = true;"></field>
    </fieldset>
</config>
