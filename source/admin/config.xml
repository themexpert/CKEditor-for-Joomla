<?xml version="1.0" encoding="UTF-8"?>
<config>
    <fieldset name="basic" class="btn-group">
        <field name="toolbar" type="list" default="Advanced" label="ADMINISTRATOR_TOOLBAR" description="CHOOSE_TOOLBAR_FOR_ADMINISTATOR">
            <option value="Full">FULL</option>
            <option value="Advanced">ADVANCED</option>
            <option value="Basic">BASIC</option>
        </field>
        <field name="toolbar_frontEnd" type="list" default="Basic" label="FRONTEND_TOOLBAR" description="CHOOSE_TOOLBAR">
            <option value="Full">FULL</option>
            <option value="Advanced">ADVANCED</option>
            <option value="Basic">BASIC</option>
        </field>
        <field name="skin" type="list" default="moono" label="SKIN" description="SET_SKIN">
            <option value="moono">moono</option>
            <option value="kama">kama</option>
        </field>
        <field name="CKEditorWidth" type="text" default="" label="EDITOR_WIDTH" description="EDITOR_WIDTH_DESCRIPTION" />
        <field name="CKEditorHeight" type="text" default="" label="EDITOR_HEIGHT" description="EDITOR_HEIGHT_DESCRIPTION" />
        <field name="CKEditorAutoGrow" type="radio" default="0" label="AUTO_GROW" description="AUTO_GROW_DESCRIPTION" class="btn-group">
            <option value="0">JDisabled</option>
            <option value="1">JEnabled</option>
        </field>
        <field name="CKEditorTableResize" type="radio" default="0" label="TABLERESIZE" description="TABLERESIZE_DESCRIPTION" class="btn-group">
            <option value="0">JDisabled</option>
            <option value="1">JEnabled</option>
        </field>
        <field name="Basic_ToolBar" default="Bold, Italic, ;, NumberedList, BulletedList, ;, Link, Unlink" type="hidden" label="Basic ToolBar" description="Change Basic toolbar. Special characters: '/' - new line, '-' - separator, ';' - set new toolbar" />
        <field name="Advanced_ToolBar" default="Source,;,Save,NewPage,Preview,;,Templates,;,Cut,Copy,Paste,PasteText,PasteFromWord,;,Print,SpellChecker,Scayt,;,Undo,Redo,;,Find,Replace,;,SelectAll,RemoveFormat,;,/,Bold,Italic,Underline,Strike,;,Subscript,Superscript,;,NumberedList,BulletedList,;,Outdent,Indent,Blockquote,;,JustifyLeft,JustifyCenter,JustifyRight,JustifyBlock,;,BidiLtr,BidiRtl,;,Link,Unlink,Anchor,;,Image,Flash,Table,HorizontalRule,Smiley,SpecialChar,PageBreak,/,,/,Styles,;,Format,;,Font,;,FontSize,TextColor,BGColor,;,Maximize,ShowBlocks,;,ReadMore,;,About" type="hidden" label="Advanced Toolbar" description="Change advanced toolbar. Special characters: '/' - new line, '-' - separator, ';' - set new toolbar" />
    </fieldset>
