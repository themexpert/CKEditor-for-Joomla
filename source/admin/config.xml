            <option value="1">P_ELEMENTS</option>
            <option value="2">BR_ELEMENTS</option>
            <option value="3">DIV_ELEMENTS</option>
        </field>
        <field name="shiftEnterMode" type="list" default="2" label="SHIFT_ENTER_MODE" description="SHIFT_ENTER_MODE_DESCRIPTION">
            <option value="1">P_ELEMENTS</option>
            <option value="2">BR_ELEMENTS</option>
            <option value="3">DIV_ELEMENTS</option>
        </field>
        <field name="templateCss" type="radio" default="0" label="USE_TEMPLATE_CSS" description="USE_TEMPLATE_CSS_DESCRIPTION" class="btn-group">
            <option value="0">JNo</option>
            <option value="1">JYes</option>
        </field>
        <field name="style" type="text" default="" label="STYLES_DEFINITION_FILE" description="STYLES_DEFINITION_FILE_DESCRIPTION" />
        <field name="template" type="text" default="" label="TEMPLATES_DEFINITION_FILE" description="TEMPLATES_DEFINITION_FILE_DESCRIPTION" />
        <field name="css" type="text" default="" label="CSS_FILES" description="CSS_FILES_DESCRIPTION" />
        <field name="CKEditorJs" type="radio" default="0" label="LOAD_METHOD" description="LOAD_METHOD_DESCRIPTION" class="btn-group">
            <option value="0">Minified (recommended)</option>
            <option value="1">Uncompressed (slower)</option>
        </field>
        <field name="DivBased" type="radio" default="0" label="DIV_BASED" description="DIV_BASED_DESCRIPTION" class="btn-group">
            <option value="0">JDisabled</option>
            <option value="1">JEnabled</option>
        </field>
        <field name="LinkBrowser" type="radio" default="0" label="LINK_BROWSER" description="LINK_BROWSER_DESCRIPTION" class="btn-group">
            <option value="0">JDisabled</option>
            <option value="1">JEnabled</option>
        </field>
