            <option value="1">RIGHT_TO_LEFT</option>
        </field>
    </fieldset>
    <fieldset name="formatting" class="btn-group">
        <field name="CKEditorIndent" type="radio" default="0" label="INDENT_THE_ELEMENT_CONTENTS" class="btn-group">
            <option value="0">JNo</option>
            <option value="1">JYes</option>
        </field>
        <field name="CKEditorBreakBeforeOpener" type="radio" default="0" label="BREAK_LINE_BEFORE_THE_OPENING_TAG" class="btn-group">
            <option value="0">JNo</option>
            <option value="1">JYes</option>
        </field>
        <field name="CKEditorBreakAfterOpener" type="radio" default="0" label="BREAK_LINE_AFTER_THE_OPENING_TAG" class="btn-group">
            <option value="0">JNo</option>
            <option value="1">JYes</option>
        </field>
        <field name="CKEditorBreakBeforeCloser" type="radio" default="0" label="BREAK_LINE_BEFORE_THE_CLOSING_TAG" class="btn-group">
